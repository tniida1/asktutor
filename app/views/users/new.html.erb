<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 --><br />

    <%= f.label :name %>
    <%= f.text_field :name %><br />
      
    <%= f.label :email %>
    <%= f.text_field :email %><br />
      
    <%= f.label :password %>
    <%= f.password_field :password %><br />

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %><br />

    <%= f.submit "Create my account", class: "btn btn-large btn-primary" %><br />

<% end %>

  </div>
</div>